<h1>商品一覧</h1>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>価格</th>
      
    </tr>
  </thead>

  <tbody>
    <hr>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td>
          <%= link_to "カートに追加", new_cart_item_path %>
          <%= link_to "削除", product_path(product), data: { "turbo-method": :delete } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "商品登録", new_product_path %>
<%= link_to "カートを見る", cart_path(current_cart) %>
